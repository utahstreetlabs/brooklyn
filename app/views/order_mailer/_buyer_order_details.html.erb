<%= mailer_subheader do %>
  Order Details
<% end %>

<%= mailer_graf do %>
  Order Date: <%= date(order.created_at) %><br />
  Listing Title: <%= order.listing.title %><br />
  <% if order.respond_to?(:credit_applied?) and order.credit_applied? %>
    Listing Total: <%= number_to_currency order.listing.total_price %><br/>
    Credits Applied: (<%= number_to_currency order.credit_amount %>)<br/>
  <% end %>
  Order Total: <%= number_to_currency order.total_price %><br />
  <%= mailer_order_details_tracking_number(order, tracking_number: tracking_number) if defined?(tracking_number) %>
<% end %>
