<% title(title) %>

<h3><%= title %></h3>
<div class="users_list">
  <% @users.each do |user| %>
    <div class="activity">
      <%= user_avatar_small(user) %>
      <div class="content">
        <span class="details"><%= link_to_user_profile(user) %></span>
      </div>
    </div>
  <% end %>

  <% if @users.empty? %>
    <p><%= empty_msg %></p>
  <% end %>
</div>
