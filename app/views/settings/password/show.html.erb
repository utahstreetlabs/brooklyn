<%
title 'Account Settings: Change Your Password'
mp_view_event 'password settings'
%>

<h2>Change Your Password</h2>
<div class="section">
  <%= form_for current_user, url: settings_password_path do |f| %>
    <%= f.field :current_password, container: :div, class: 'password' do %>
      <%= f.label :current_password, 'Current Password' %>
      <%= f.password_field :current_password, maxlength: 64, value: '', :class => 'span5'%>
      <%#= link_to 'Forgot your password?', new_password_reset_path %>
    <% end %>
    <%= f.field :password, container: :div, class: 'password' do %>
      <%= f.label :password, 'New Password' %>
      <%= f.password_field :password, maxlength: 64, value: '', :class => 'span5' %>
    <% end %>
    <%= f.field :password_confirmation, container: :div, class: 'password' do %>
      <%= f.label :password_confirmation, 'Confirm New Password' %>
      <%= f.password_field :password_confirmation, maxlength: 64, value: '', :class => 'span5' %>
    <% end %>
    <%= f.buttons save_text: 'Save New Password' %>
  <% end %>
</div>
