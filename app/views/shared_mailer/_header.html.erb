  		a img {border:none;}
  		p {margin: 0em;}
  		table td {border-collapse: collapse;}
      table {border-spacing: 0px;}
      /* Link color override. */


      @media only screen and (max-device-width: 480px) {
        *[id=backgroundTable] {max-width: 320px !important;}
