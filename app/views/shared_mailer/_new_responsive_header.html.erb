        td[id=content-wrapper] {width: 320px !important;}
        *[id=content-area] {width: 300px !important;}
        *[id=footer-container] {width: 300px !important; padding-top: 0px !important; padding-bottom: 0px !important; margin-top: 0px !important; margin-bottom: 0px !important;}
        *[id=footer-area] {width: 300px !important;}
        img[id=footer-shadow-large] {width: 300px !important; margin-top: 0px !important; padding-top: 0px !important;}
        span[class=footer-disclaimer] {width: 300px !important;}

        /*  HTML EMAIL BOILERPLATE v 0.5 CODE  */
        a[href^="tel"], a[href^="sms"] {
                text-decoration: none;
                color: #799DD3;
                pointer-events: none;
                cursor: default;
        }

        .mobile_link a[href^="tel"], .mobile_link a[href^="sms"] {
                text-decoration: default;
                color: #799DD3;
                pointer-events: auto;
                cursor: default;
        }
      }

      /*  END VENDOR CODE  */

      @media only screen and (-webkit-min-device-pixel-ratio: 2) {
        /* Put your iPhone 4g styles in here */
      }
