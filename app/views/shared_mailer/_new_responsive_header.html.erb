      a, a span {color: #799DD3 !important; text-decoration: none !important;}
      a.action-button {color: #FFFFFF !important;}
      span, p {font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif; font-size: 12px; line-height: 18px; font-weight: 300; color: #6F6F6E; display: inline-block;}
      div[id=header-name] {display: block; text-align: left; width: 100%; height: 40px; font-weight: 500; }
      div[id=header-story], div[id=header-story] span {font-weight: 300; text-align: left; font-size: 14px; line-height: 20px;}

      /*  FOR IPHONE  */
      @media only screen and (max-device-width: 480px) {
        *[id=backgroundTable] {width: 334px !important; text-align: center;}
