<%= render '/shared_mailer/header' %>

<%= mailer_graf do %>
  <%= mailer_link_to "Order ##{@payment.reference_number}", admin_order_url(@payment.order) %> has completed successfully. Please settle the order by transferring <%= number_to_currency @payment.amount %> to the PayPal account of <%= mailer_link_to @payment.recipient_name, public_profile_url(@payment.recipient) %> at <%= @payment.paypal_email %>. You can perform the transfer at <%= mailer_link_to 'PayPal', 'https://paypal.com/', target: 'paypal' %> and mark the order paid <%= link_to 'here', admin_payments_paypal_index_url %>.
<% end %>

<%= render '/shared_mailer/footer' %>
